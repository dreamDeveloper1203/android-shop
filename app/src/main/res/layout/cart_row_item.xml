<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="9dp"
    android:background="?attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/iv_cv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        app:cardCornerRadius="40dp">
        <ImageView
            android:id="@+id/iv_cart_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tech_center_logo"
            android:contentDescription="@null"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/iv_cv"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_cart_item_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/dark"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/app_name"/>
        <TextView
            android:id="@+id/text_cart_item_category_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:textColor="@color/muted"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/app_name"/>
        <TextView
            android:id="@+id/text_cart_item_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:textColor="@color/dark"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/app_name"/>
        <TextView
            android:id="@+id/text_cart_item_subtotal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:textColor="@color/dark"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:text="@string/app_name"/>

    </LinearLayout>
</RelativeLayout>